<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="4000"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">

    <shape
        android:innerRadius="20dp"
        android:shape="ring"
        android:thickness="4dp"
        android:useLevel="false">
        <size
            android:width="50dp"
            android:height="50dp" />

        <gradient
            android:centerColor="#8031AABD"
            android:centerY="0.5"
            android:endColor="#ff31AABD"
            android:startColor="#0031AABD"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>